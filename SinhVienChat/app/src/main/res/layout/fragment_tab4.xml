<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#56b45f"
    tools:context="TabFragment.Tab4Fragment">

    <!-- TODO: Update blank fragment layout -->
    <LinearLayout
        android:layout_width="match_parent"
        android:background="@drawable/bgr"
        android:gravity="bottom"
        android:orientation="horizontal"
        android:layout_height="210dp">
        <de.hdodenhof.circleimageview.CircleImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:id="@+id/avatar_profile"
            android:src="@drawable/avt"
            android:layout_margin="10dp"
            />
    </LinearLayout>
    <ImageButton
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/camera"
        android:layout_marginTop="160dp"
        android:layout_marginBottom="10dp"
        android:layout_gravity="right"
        android:layout_marginRight="10dp"
        android:id="@+id/btn_camera"
        />

    <TableLayout
        android:layout_marginTop="220dp"
        android:layout_width="match_parent"
        android:padding="10dp"
        android:layout_height="match_parent">
        <TableRow>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Email: "
                android:id="@+id/email_profilr"
                android:textSize="20sp"
                android:textColor="#000000"
                />
            <EditText
                android:layout_width="0dp"
                android:layout_weight="1"
                android:text=""
                android:focusable="false"
                android:id="@+id/edt_email"
                android:minHeight="40dp"
                android:background="@null"
                />
        </TableRow>
        <TableRow>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Name: "
                android:id="@+id/name_profile"
                android:textSize="20sp"
                android:textColor="#000000"
                />
            <EditText
                android:layout_width="0dp"
                android:layout_weight="1"
                android:id="@+id/edt_nameprofile"
                android:minHeight="40dp"
                android:background="@null"

                />
        </TableRow>
       <TableRow>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Date of birth: "
                android:id="@+id/birthday_profile"
                android:textSize="20sp"
                android:textColor="#000000"
                />
            <EditText
                android:layout_width="0dp"
                android:layout_weight="1"
                android:id="@+id/edt_birthday"
                android:minHeight="40dp"
                android:background="@null"
                />
        </TableRow>
        <TableRow>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Adress: "
                android:id="@+id/adress_profile"
                android:textSize="20sp"
                android:textColor="#000000"
                />
            <EditText
                android:layout_width="0dp"
                android:layout_weight="1"
                android:id="@+id/edt_adressrofile"
                android:background="@null"
                android:minHeight="40dp"
                />
        </TableRow>
        <TableRow>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="School: "
                android:id="@+id/school_profile"
                android:textSize="20sp"
                android:textColor="#000000"
                />
            <EditText
                android:layout_width="0dp"
                android:layout_weight="1"
                android:id="@+id/edt_schoolprofile"
                android:background="@null"
                android:minHeight="40dp"
                />
        </TableRow>
        <TableRow>
           <Button
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:layout_column="1"
               android:text="Save"
               android:id="@+id/save_profile"
               android:textColor="#000000"
               />
        </TableRow>
    </TableLayout>


</FrameLayout>
